@model List<TrenIstasyon>
<a asp-action="Create" asp-controller="TrenIstasyon" class="btn btn-primary">Yeni Kayit</a>


<div class="card">
    <div class="card-header">
        <h3>Istasyonlar</h3>
    </div>

    <table class="table table-hover" id="myTable">

        <thead>
            <tr>


                <td>ID</td>
                <td>İstasyon Konumu</td>
                <td>İstasyon Adı</td>
                <td>Adresi</td>

                <td></td>
                <td></td>

            </tr>



        </thead>
        <tbody>
            @foreach (TrenIstasyon istasyon in Model)
            {
               
                    <tr class="bg-danger">

                    <td>@istasyon.Id</td>
                    <td>@istasyon.IstasyonKonumu</td>
                    <td>@istasyon.IstasyonAdi</td>
                    <td>@istasyon.IstasyonAdresi</td>


                    <td><a asp-action="Update" asp-controller="TrenIstasyon" class="btn btn-success" asp-route-Id="@istasyon.Id">Update</a> </td>
                    <td><a asp-action="Delete" asp-controller="TrenIstasyon" class="btn btn-success" asp-route-Id="@istasyon.Id">Delete</a> </td>
                   
                    </tr>
                
           
            }
        </tbody>
    </table>
</div>
@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

    </script>
}
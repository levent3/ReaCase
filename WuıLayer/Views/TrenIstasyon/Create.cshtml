@model TrenIstasyonCreateDTO
<div class="card">
    <div class="card-header">
        <h3>Yeni Istasyon</h3>
        <div class="card-header">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="TrenIstasyon" method="post" enctype="multipart/form-data">


            <div class="input-group mb-3">
                <input type="text" asp-for="IstasyonAdi" class="form-control" placeholder="Adı">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="IstasyonAdi"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="text" asp-for="IstasyonAdresi" class="form-control" placeholder="Adres">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="IstasyonAdresi"></span>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input type="text" asp-for="IstasyonKonumu" class="form-control" placeholder="Konum">

                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope text-danger" asp-validation-for="IstasyonKonumu"></span>
                        </div>
                    </div>
                </div>

                



                <button type="submit" class="btn btn-primary" value="Kaydet">Kaydet</button>
        </form>
    </div>
</div>
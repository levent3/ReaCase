@model IEnumerable<TrenIstasyonListDTO>
<a asp-action="Create" asp-controller="TrenSefer" class="btn btn-primary">Yeni Kayit</a>


<div class="card">
    <div class="card-header">
        <h3>Istasyonlar</h3>
    </div>

    <table class="table table-hover" id="myTable">

        <thead>
            <tr>


                <td>ID</td>
                <td>Kalkıs Saati</td>
                <td>VarisSaati</td>               
                
                <td>TrenKalkisIstasyonAdı</td>
                <td>TrenVarisIstasyonAdı</td>
               

                <td></td>
                <td></td>

            </tr>



        </thead>
        <tbody>
            @foreach (var sefer in Model)
            {

                <tr class="bg-danger">

                    <td>@sefer.Id</td>
                    <td>@sefer.KalısSaati</td>
                    <td>@sefer.VarisSaati</td>
                   
                    <td>@sefer.TrenKalkisIstasyonAdi</td>
                    <td>@sefer.TrenVarisIstasyonAdi</td>
                   


                    <td><a asp-action="Update" asp-controller="TrenSefer" class="btn btn-success" asp-route-Id="@sefer.Id">Update</a> </td>
                    <td><a asp-action="Delete" asp-controller="TrenSefer" class="btn btn-dark" asp-route-Id="@sefer.Id">Delete</a> </td>
                </tr>


            }
        </tbody>
    </table>
</div>
@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

    </script>
}

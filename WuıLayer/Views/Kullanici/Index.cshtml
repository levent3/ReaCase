@model List<Kullanici>
<a asp-action="Create" asp-controller="Kullanici" class="btn btn-primary">Yeni Kayit</a>


<div class="card">
    <div class="card-header">
        <h3>Istasyonlar</h3>
    </div>

    <table class="table table-hover" id="myTable">

        <thead>
            <tr>


                <td>ID</td>
                <td>Kullanıcı Adi</td>
                <td>Şifre</td>
             

                <td></td>
                <td></td>

            </tr>



        </thead>
        <tbody>
            @foreach (Kullanici user in Model)
            {

                <tr class="bg-danger">

                    <td>@user.Id</td>
                    <td>@user.KullaniciAdi</td>
                    <td>@user.Sifre</td>



                    <td><a asp-action="Update" asp-controller="Kullanici" class="btn btn-success" asp-route-Id="@user.Id">Update</a> </td>
                    <td><a asp-action="Delete" asp-controller="Kullanici" class="btn btn-dark" asp-route-Id="@user.Id">Delete</a> </td>
                </tr>


            }
        </tbody>
    </table>
</div>
@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

    </script>
}
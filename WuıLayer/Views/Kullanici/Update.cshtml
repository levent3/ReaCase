@model KullaniciUpdateDTO

<div class="card">
    <div class="card-header">
        <h3>@Model.id </h3>
        <div class="card-header">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Update" asp-controller="Kullanici" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="id">
            <div class="input-group mb-3">
                <input type="text" asp-for="KullaniciAdi" class="form-control" placeholder="KullaniciAdi">
                <div class="input-group-append">
                    <div class="input-group-text">
                           <span class="fas fa-envelope text-danger" asp-validation-for="KullaniciAdi"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="text" asp-for="Sifre" class="form-control" placeholder="Sifre">
                <div class="input-group-append">
                    <div class="input-group-text">
                         <span class="fas fa-envelope text-danger" asp-validation-for="Sifre"></span>
                    </div>
                </div>
            </div>

                    <button type="submit" class="btn btn-primary" value="Kaydet">Kaydet</button>
        </form>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
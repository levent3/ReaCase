@model KullaniciCreateDto
<div class="card">
    <div class="card-header">
        <h3>Yeni Istasyon</h3>
        <div class="card-header">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="Kullanici" method="post" enctype="multipart/form-data">


            <div class="input-group mb-3">
                <input type="text" asp-for="KullaniciAdi" class="form-control" placeholder="Kullanici Adı">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="KullaniciAdi"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="text" asp-for="Sifre" class="form-control" placeholder="Sifre">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="Sifre"></span>
                    </div>
                </div>

            





                <button type="submit" class="btn btn-primary" value="Kaydet">Kaydet</button>
        </form>
    </div>
</div>